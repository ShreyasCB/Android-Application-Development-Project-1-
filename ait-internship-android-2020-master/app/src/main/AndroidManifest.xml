<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capulustech.myapplication">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".StudentRegistrationActivity"
            android:label="Student Registration" />

        <activity
            android:name=".StudentListActivity"
            android:label="Students List" />

        <activity
            android:name=".LocationActivity"
            android:label="Location" />

        <activity
            android:name=".ShareActivity"
            android:label="Share" />

        <activity
            android:name=".TextToSpeechActivity"
            android:label="Text To Speech" />

        <activity
            android:name=".VideoCaptureActivity"
            android:label="Video Capture" />

        <activity
            android:name=".WebViewActivity"
            android:label="Web View" />
        <activity
            android:name=".AadhaarActivity"
            android:text="" />
        <activity
            android:name=".SpeechRecognitionActivity"
            android:text="" />

        <activity
            android:name=".LoginActivity"
            android:label="Login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>