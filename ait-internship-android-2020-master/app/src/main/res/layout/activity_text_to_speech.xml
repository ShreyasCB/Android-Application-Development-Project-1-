<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRegLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/computer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Internship"
                android:textColor="@color/md_white_1000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Text To Speech Demo"
                android:textColor="@color/md_white_1000"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:hint="Student Name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/usnET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:hint="USN"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"
                android:textSize="15sp" />


            <Spinner
                android:id="@+id/branchSpn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:entries="@array/branch"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />


            <Spinner
                android:id="@+id/sectionSpn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:entries="@array/section"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />


            <EditText
                android:id="@+id/mobileET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/speakBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/md_blue_800"
                    android:text="Speak"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/stopBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/md_blue_800"
                    android:text="Stop"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>